    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Go Server with Nodemon",
            "type": "shell",
            "command": "nodemon",
            "args": [
                "--exec", "go build -o main.exe && main.exe",  // Build and execute main.exe
                "--ext", "go"
            ],
            "group": "build",
            "problemMatcher": [],
            "isBackground": true,
        }
    ]
}